@page "/coloring1"

<PageTitle>Coloring Page 1 - Magical Forest</PageTitle>

<div class="magical-container">
    <h1 class="magical-title">
        <i class="bi bi-palette"></i> Coloring Page 1
    </h1>
    
    <div class="magical-text">
        <p>This is a magical coloring page. Use the color palette below to bring this scene to life!</p>
    </div>
    
    <div class="coloring-area">
        <h3>Magical Scene 1</h3>
        <p>Color the magical elements by clicking on them and selecting a color.</p>
        
        <svg width="100%" height="400" viewBox="0 0 800 400">
            <rect width="800" height="400" fill="#f5f5f5" />
            <text x="400" y="200" text-anchor="middle" fill="#999" font-size="24">
                Interactive Coloring Area 1
            </text>
        </svg>
    </div>
    
    <div class="color-palette mt-4">
        <h4>Color Palette:</h4>
        <div class="d-flex flex-wrap gap-2">
            <div class="color-swatch" style="background-color: #FF9700;"></div>
            <div class="color-swatch" style="background-color: #3CC376;"></div>
            <div class="color-swatch" style="background-color: #FDC862;"></div>
            <div class="color-swatch" style="background-color: #29916B;"></div>
            <div class="color-swatch" style="background-color: #906700;"></div>
            <div class="color-swatch" style="background-color: #916631;"></div>
        </div>
    </div>
    
    <div class="mt-4">
        <button class="magical-btn">
            <i class="bi bi-download"></i> Save Coloring
        </button>
        <button class="magical-btn">
            <i class="bi bi-arrow-clockwise"></i> Reset
        </button>
        <a href="/coloring/episode1" class="magical-btn">
            <i class="bi bi-book"></i> Back to Story
        </a>
    </div>
</div>

